@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center w-100 mh-100">
    <form class="mt-5 bg-dark shadow-lg rounded p-5 text-light w-50" method="post"
          asp-action="Login">
        <h3 class="">Login</h3>
        @if (ViewBag.Error == true)
        {
            <div class="alert alert-danger">
                Login or password wrong!
            </div>
        }
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">
                @ViewBag.Message
            </div>
        }
        <div class="mb-3">
            <label for="login">Login</label>
            <input id="login" name="login" class="form-control" placeholder="Type the login"/>
        </div>
        <div class="mb-3">
            <label for="password-input">Password</label>
            <div class="input-group">
                <input id="password-input" name="password" type="password" class="form-control" 
                       placeholder="Type the password"/>
                <button id="show-password-btn" class="btn btn-outline-light" type="button">
                    <i class="bi bi-eye"></i>
                </button>
            </div>
            </div>
        <div class="mb-3">
            <input id="rememberMe" name="rememberMe" type="checkbox" class="form-check-input"/>
            <label for="rememberMe">Remember me</label>
        </div>
        <button class="btn btn-success px-5 w-100" type="submit">Login</button>
        <div class="mt-3 text-center">
            <a class="text-white" asp-action="RecoverPassword">Recover password</a>
        </div>
    </form>
</div>

@section Scripts
{
    <script>
        document.getElementById('show-password-btn').addEventListener('click', function () {
           togglePasswordVisibility('password-input') 
        });
    </script>
}
